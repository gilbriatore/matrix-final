@page
@model MatrixRazor.Pages.pgBloom.CreateModel

@{
    ViewData["Title"] = "Create";
}

<section class="section-margin">
    <div class="container">

        <h2 class="title">Incluir nível de Bloom</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Bloom.Nome" class="control-label"></label>
                        <input asp-for="Bloom.Nome" class="form-control" />
                        <span asp-validation-for="Bloom.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bloom.Descricao" class="control-label"></label>
                        <input asp-for="Bloom.Descricao" class="form-control" />
                        <span asp-validation-for="Bloom.Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bloom.Nivel" class="control-label"></label>
                        <input asp-for="Bloom.Nivel" class="form-control" />
                        <span asp-validation-for="Bloom.Nivel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Voltar</a>
        </div>

    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
