@page
@model MatrixRazor.Pages.pgCurso.CreateModel

@{
    ViewData["Title"] = "Create";
}

<section class="section-margin">
    <div class="container">

        <h2 class="title">Incluir curso</h2>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Curso.Nome" class="control-label"></label>
                        <input asp-for="Curso.Nome" class="form-control" />
                        <span asp-validation-for="Curso.Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Curso.Descricao" class="control-label"></label>
                        <input asp-for="Curso.Descricao" class="form-control" />
                        <span asp-validation-for="Curso.Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="EscolaId">Escola</label>
                        <select asp-for="EscolaId" asp-items="Model.Escolas" class="custom-select">
                            <option value="">Selecione</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="ModalidadeId">Modalidade</label>
                        <select asp-for="ModalidadeId" asp-items="Model.Modalidades" class="custom-select">
                            <option value="">Selecione</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="TipoDeCursoId">Tipo de curso</label>
                        <select asp-for="TipoDeCursoId" asp-items="Model.TiposDeCurso" class="custom-select">
                            <option value="">Selecione</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="PerfisId">Perfis</label>
                        <select asp-for="PerfisId" asp-items="Model.Perfis" class="custom-select"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Curso.PercMaxAtividadeDistancia" class="control-label"></label>
                        <input asp-for="Curso.PercMaxAtividadeDistancia" class="form-control" />
                        <span asp-validation-for="Curso.PercMaxAtividadeDistancia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Curso.CargaHorasMinEstagio" class="control-label"></label>
                        <input asp-for="Curso.CargaHorasMinEstagio" class="form-control" />
                        <span asp-validation-for="Curso.CargaHorasMinEstagio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Curso.CargaHorasMinCurso" class="control-label"></label>
                        <input asp-for="Curso.CargaHorasMinCurso" class="form-control" />
                        <span asp-validation-for="Curso.CargaHorasMinCurso" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Curso.PercMaxEstagioAC" class="control-label"></label>
                        <input asp-for="Curso.PercMaxEstagioAC" class="form-control" />
                        <span asp-validation-for="Curso.PercMaxEstagioAC" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-page="Index">Voltar</a>
        </div>

    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("./_ValidationScriptsPartial");}
}
