@page
@model MatrixRazor.Pages.pgTrilha.CreateModel

@{
    ViewData["Title"] = "Create";
}

    <section class="section-margin">
        <div class="container">

            <h2 class="title">Incluir trilha</h2>

            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Trilha.Nome" class="control-label"></label>
                            <input asp-for="Trilha.Nome" class="form-control" />
                            <span asp-validation-for="Trilha.Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Trilha.Descricao" class="control-label"></label>
                            <input asp-for="Trilha.Descricao" class="form-control" />
                            <span asp-validation-for="Trilha.Descricao" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="Index">Voltar</a>
            </div>

        </div>
    </section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
